                        </ul>
                        <div class="visible content">
                            <h1>
                                You gave yourself a score of: {{this.dataValues.score}}

                            </h1>
                        </div>


                    </div>
                    <div class="content">
                        <a class="header">Team Fu &amp; Hess</a>
                        <div class="meta">
                            <span class="date">Created in Sep 2014</span>
                        </div>
                    </div>
                    <div class="extra content">
                        <a>
                            <i class="users icon"></i>
                            2 Members
                        </a>
                    </div>
                    {{/if}}
                    {{/each}}
                </div>
                {{#each networking}}
                {{#if this.dataValues.score}}
                <div class="ui card">
                    <div class="ui slide masked reveal image">
                        <ul class="hidden content">
                            <li>
                                <a class="header" href="/event/{{this.dataValues.id}}">{{this.dataValues.eventName}}</a>
                                <div class="description">
                                    <p>This event happened on: {{this.dataValues.eventDate}}</p>
