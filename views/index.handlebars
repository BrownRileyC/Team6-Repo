                    <div class="ui slide masked reveal image">
                        <ul class="hidden content">
                            <li>
                                <a class="header" href="/event/{{this.dataValues.id}}">{{this.dataValues.eventName}}</a>
                                <div class="description">
                                    <p>This event happened on: {{this.dataValues.eventDate}}</p>
